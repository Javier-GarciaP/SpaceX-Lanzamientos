---
const { img, lanzamiento, numero, nombre } = Astro.props;

const statusTakeOffs = lanzamiento ? "Success" : "Fail";
---

<div class="card">
  <img src={img} alt="" />
  <div class="info">
    <span
      class:list={[
        {
          fine: lanzamiento,
          fail: !lanzamiento,
        },
      ]}
    >
      {statusTakeOffs}
    </span>
    <h2 class="bold">Vuelo {numero}</h2>
    <p>{nombre}</p>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    border: 1px solid;
    border-radius: 8px;
    overflow: hidden;
    border-color: #000;
    background-color: #f6f8ff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    gap: 5px;
    padding: 10px;
  }

  .info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: left;
    height: 50%; /* El resto del espacio */
    padding: 4px;

  }

  img {
    aspect-ratio: 1/1;
    width: 100%;
    height: 50%;

  }

  .fine,
  .fail {
    padding: 3px 8px;
    border-radius: 100cqmax;
  }

  .fine {
    color: black;
    background-color: rgb(92, 249, 129);
  }

  .fail {
    color: white;
    background-color: rgb(255, 87, 87);
  }

  span,
  h2,
  p{
    padding: 10px;
    margin: 0;
  }

  .bold {
    font-size: 1.7rem;
    font-weight: bold;
  }
</style>
