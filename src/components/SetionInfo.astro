---
const { img, numeroLanzamiento, nombreCohete, detalles } = Astro.props;
import Setion from "../components/Setion.astro";
---

<Setion>
    <div class="container">
      <div class="imagen">
        <img src={img} alt=`Imagen del Cohete ${nombreCohete}` />
      </div>
      <div class="info">
        <h1>Numero de Lanzamiento {numeroLanzamiento}</h1>
        <h2>Cohete: {nombreCohete}</h2>
        <p>{detalles}</p>
      </div>
    </div>
  </Setion>

  <style>
    .container {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      width: 100%;
    }
  
    .imagen {
      width: 40%;
    }
  
    img {
      aspect-ratio: 1/1;
      width: 100%;
      height: 50%;
    }

    .info{
      display: flex;
      flex-direction: column;
      justify-content: start;
      align-items: start;
      width: 60%;
    }

    h1,h2,p{
      margin: 10px;
    }

    h1{
      font-size: 2.1rem;
      font-weight: bold;
    }

    h2{
      font-size: 1.7rem;
      font-weight: bold;
    }

    p{
      font-size: 1.2rem;
    }
  </style>
  